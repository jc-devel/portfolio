<body  class="is-preload font-sans antialiased text-gray-900 leading-normal tracking-wider bg-cover bg-center max-h-screen" style="background-image:url('personal/background-hero.webp');" >


	<div class="absolute top-0 right-0 h-12 w-18 p-4 z-50">
		<a class="js-change-theme focus:outline-none cursor-pointer">üåô</a> 
	</div>

  <div id="wrapper"> 

    

	<PersonalHero />


	<Gallery />
  </div>
  


	<script is:inline src="/scripts/jquery.min.js"></script>
	<script is:inline src="/scripts/jquery.poptrox.min.js"></script>
	<script is:inline src="/scripts/browser.min.js"></script>
	<script is:inline src="/scripts/breakpoints.min.js"></script>
	<script is:inline src="/scripts/util.js"></script>
	<script is:inline src="/scripts/main.js"></script>


	<script>
		//Init tooltips
		import tippy from 'tippy.js'
		tippy('.link',{
		  placement: 'bottom'
		})
	
	
		//Toggle mode
		const toggle = document.querySelector('.js-change-theme') as HTMLButtonElement;
		const body = document.querySelector('body') as HTMLBodyElement;
		const profile = document.getElementById('profile') as HTMLDivElement;
	
	
		toggle.addEventListener('click', () => {
	
		  if (body.classList.contains('text-gray-900')) {
			toggle.innerHTML = "‚òÄÔ∏è";
			body.classList.remove('text-gray-900');
			body.classList.add('text-gray-100');

			profile.classList.remove('bg-white');
			profile.classList.add('bg-gray-900');
		  } else
		  {
			toggle.innerHTML = "üåô";
			body.classList.remove('text-gray-100');
			body.classList.add('text-gray-900');

			profile.classList.remove('bg-gray-900');
			profile.classList.add('bg-white');
	
		  }
		});
	
	</script>

</body>

</html>

---
// src/components/Projects.astro
const projects = [
  {
    title: "Mamas Defensoras",
    description: "Sistema de gestión para abogados. El sistema permite una amplia administración de citas y servicios de los abogados.",
    technologies: ["Astro", "npm", "React", "Sqlite"],
    preview: "https://mamasdefensoras.dotdev.cl"
  },
  {
    title: "Chat con tus PDF's",
    description: "Permite interactuar con documentos PDF utilizando el modelo Llama 3.1, extrayendo texto para responder preguntas de manera conversacional.",
    technologies: ["Astro", "Llama3.1", "tailwindcss"],
    github: "https://github.com/jc-devel/chat-pdf",
    preview: ""
  },
  {
    title: "Ikaroapp",
    description: "En Ikaro se encargan de todo el proceso de reclamos hacia las aerolineas para que obtengas la compensación que te corresponde sin complicaciones.",
    technologies: ["React", "npm", "SQL Server", "TailwindCSS", "Python"],
    github: "",
    preview: "https://ikaroapp.com/"
  },
];
---

<section id="projects" class="py-20">
  <div class="container mx-auto px-4">
    <h2 class="flex gap-x-3 items-center justify-center text-3xl font-bold mb-8 text-center dark:text-white">
      <svg class="size-7" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M7 8l-4 4l4 4"></path><path d="M17 8l4 4l-4 4"></path><path d="M14 4l-4 16"></path></svg>
      Proyectos
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project) => (
        <div class="relative flex flex-col rounded-xl bg-white dark:bg-gray-800 shadow-lg overflow-hidden">
          <div class="h-40 overflow-hidden">
            {project.preview ? (
              <img
                src={`https://api.microlink.io/?url=${encodeURIComponent(project.preview)}&screenshot=true&meta=false&embed=screenshot.url`}
                alt={`Previsualización de ${project.title}`}
                class="w-full h-full object-cover"
              />
            ) : (
              <div class="w-full h-full flex items-center justify-center bg-gray-200 dark:bg-gray-700 text-gray-500 dark:text-gray-400">
                Previsualización no disponible
              </div>
            )}
          </div>

          <div class="p-6">
            <h5 class="text-xl font-semibold text-gray-900 dark:text-white">{project.title}</h5>
            <p class="text-gray-700 dark:text-gray-300">{project.description}</p>
          </div>

          <div class="p-6 pt-0 flex gap-4">
            {project.preview && (
              <a href={project.preview} target="_blank" rel="noopener noreferrer" class="text-blue-500 flex items-center gap-x-2 hover:scale-105 transition-transform">
                Ir al sitio 
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"></path>
                </svg>
              </a>
            )}

            {project.github && (
              <a href={project.github} target="_blank" rel="noopener noreferrer" class="text-gray-800 dark:text-gray-200 flex items-center gap-x-2 hover:scale-105 transition-transform">
                <svg viewBox="0 0 256 250" width="20" height="20" fill="currentColor" preserveAspectRatio="xMidYMid">
                  <path d="M128.001 0C57.317 0 0 57.307 0 128.001c0 56.554 36.676 104.535 87.535 121.46 6.397 1.185 8.746-2.777 8.746-6.158 0-3.052-.12-13.135-.174-23.83-35.61 7.742-43.124-15.103-43.124-15.103-5.823-14.795-14.213-18.73-14.213-18.73-11.613-7.944.876-7.78.876-7.78 12.853.902 19.621 13.19 19.621 13.19 11.417 19.568 29.945 13.911 37.249 10.64 1.149-8.272 4.466-13.92 8.127-17.116-28.431-3.236-58.318-14.212-58.318-63.258 0-13.975 5-25.394 13.188-34.358-1.329-3.224-5.71-16.242 1.24-33.874 0 0 10.749-3.44 35.21 13.121 10.21-2.836 21.16-4.258 32.038-4.307 10.878.049 21.837 1.47 32.066 4.307 24.431-16.56 35.165-13.12 35.165-13.12 6.967 17.63 2.584 30.65 1.255 33.873 8.207 8.964 13.173 20.383 13.173 34.358 0 49.163-29.944 59.988-58.447 63.157 4.591 3.972 8.682 11.762 8.682 23.704 0 17.126-.148 30.91-.148 35.126 0 3.407 2.304 7.398 8.792 6.14C219.37 232.5 256 184.537 256 128.002 256 57.307 198.691 0 128.001 0Z"></path>
                </svg>
                Código
              </a>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

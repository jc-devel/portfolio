// src/components/Experience.astro
---

<section id="experience" class="py-20 bg-gray-100 dark:bg-gray-800">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-8 text-center dark:text-white">Work Experience</h2>
      <div class="relative">
        <div class="absolute left-1/2 transform -translate-x-1/2 h-full w-1 bg-gray-300 dark:bg-gray-600"></div>
        <div class="space-y-12">
          <div class="relative">
            <div class="absolute left-1/2 transform -translate-x-1/2 -mt-1 w-4 h-4 rounded-full bg-blue-500"></div>
            <div class="ml-8 md:ml-0 md:mr-auto md:w-1/2 md:pr-8">
              <h3 class="text-xl font-semibold dark:text-white">Senior Frontend Developer</h3>
              <p class="text-gray-600 dark:text-gray-400">Company Name | 2020 - Present</p>
              <p class="mt-2 dark:text-gray-300">Led the development of multiple web applications using React and Next.js.</p>
            </div>
          </div>
          <div class="relative">
            <div class="absolute left-1/2 transform -translate-x-1/2 -mt-1 w-4 h-4 rounded-full bg-blue-500"></div>
            <div class="ml-8 md:ml-auto md:w-1/2 md:pl-8">
              <h3 class="text-xl font-semibold dark:text-white">Frontend Developer</h3>
              <p class="text-gray-600 dark:text-gray-400">Another Company | 2018 - 2020</p>
              <p class="mt-2 dark:text-gray-300">Developed and maintained responsive web applications using Vue.js and Nuxt.js.</p>
            </div>
          </div>
          <!-- Add more experience items as needed -->
        </div>
      </div>
    </div>
  </section>
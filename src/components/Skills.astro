---
// src/components/Skills.astro
const skills = [
  "JavaScript", "TypeScript", "React", "Node.js", "Net Core", "ASP.NET",
  "HTML5", "CSS3", "Tailwind CSS", "Git", "Transact-SQL", "SQL Server", "PostgreSQL",
  "AWS","RESTful APIs", "Agile Methodologies"
];
---

<section id="skills" class="py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-8 text-center dark:text-white">Tecnolog√≠as</h2>
    <div class="flex flex-wrap justify-center gap-4">
      {skills.map((skill) => (
        <span class="bg-blue-500 text-white px-4 py-2 rounded-full text-sm font-semibold hover:scale-110 transition-transform duration-300">
          {skill}
        </span>
      ))}
    </div>
  </div>
</section>